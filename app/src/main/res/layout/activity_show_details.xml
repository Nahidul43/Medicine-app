<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="#ffffff"
    tools:context=".ShowDetails">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >




    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="#000000"
        app:hintTextColor="#000000"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/genericName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:hint="Generic Name"
            android:scrollbarStyle="insideInset"


            android:scrollbars="vertical"
            android:scrollHorizontally="false"

            android:textColor="#000000"
            android:textSize="18sp"


            />
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="#000000"
        app:hintTextColor="#000000"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/precaution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Precaution"
            android:cursorVisible="false"
            android:textColor="#000000"
            android:textSize="18sp"

            android:scrollbarStyle="insideInset"

            android:scrollbars="vertical"
            android:scrollHorizontally="false"


            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="#000000"
        app:hintTextColor="#000000"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/indication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Indication"
            android:cursorVisible="false"
            android:textColor="#000000"
            android:textSize="18sp"

            android:scrollbarStyle="insideInset"

            android:scrollbars="vertical"
            android:scrollHorizontally="false"

            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="#000000"
        app:hintTextColor="#000000"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/contra_Indication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contra Indication"
            android:cursorVisible="false"
            android:textColor="#000000"
            android:textSize="18sp"

            android:scrollbarStyle="insideInset"

            android:scrollbars="vertical"
            android:scrollHorizontally="false"

            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="#000000"
        app:hintTextColor="#000000"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dose"
            android:cursorVisible="false"
            android:textColor="#000000"
            android:textSize="18sp"

            android:scrollbarStyle="insideInset"

            android:scrollbars="vertical"
            android:scrollHorizontally="false"

            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="#000000"
        app:hintTextColor="#000000"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/side_effect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Side effect"
            android:cursorVisible="false"
            android:textColor="#000000"
            android:textSize="18sp"

            android:scrollbarStyle="insideInset"

            android:scrollbars="vertical"
            android:scrollHorizontally="false"


            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="#000000"
        app:hintTextColor="#000000"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/madeOfAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Made Of Action"
            android:cursorVisible="false"
            android:textColor="#000000"
            android:textSize="18sp"

            android:scrollbarStyle="insideInset"

            android:scrollbars="vertical"
            android:scrollHorizontally="false"

            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="#000000"
        app:hintTextColor="#000000"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/interaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Interaction"
            android:cursorVisible="false"
            android:textColor="#000000"
            android:textSize="18sp"

            android:scrollbarStyle="insideInset"

            android:scrollbars="vertical"
            android:scrollHorizontally="false"

            />
    </com.google.android.material.textfield.TextInputLayout>






</LinearLayout>


</ScrollView>